{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ post.summary }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ post.image }}</td>
                <td><img src="{{ asset('img/post/')}}{{ post.image }}"></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('post_index') }}">back to list</a>

    <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>

    {{ include('post/_delete_form.html.twig') }}

    <hr>
    <h1>Commentaires</h1>
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
    {{ form_start(form)}}
            {{form_widget(form)}}
            <input type="submit" value="Create"/>
        {{form_end(form)}}
    {% endif %}

        {% for commentaire in commentaires %}
        <p>Post√© par {{commentaire.user}}
            le {{commentaire.createdAt|date('d/m/y h:i')}}
        </p>
        {{commentaire.Comment}}
    
        {% endfor %}
        {% endblock %}
