{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <h1>Post index</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <!-- <th>Id</th> -->
                <th>Title</th>
                <th>Summary</th>
                <!-- <th>Content</th> -->
                <th>Created_at</th>
                <th>Author</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <!-- <td>{{ post.id }}</td> -->
                <td>{{ post.title }}</td>
                <td>{{ post.summary }}</td>
                <!-- <td>{{ post.content }}</td> -->
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    {% if post.user %}
                        {{ post.user }}
                    {% else %}
                        <i>Annonymous</i>
                    {% endif %}
                </td>
                
                <td><img style="max-height:75px;widows: 75px;" src="{{ asset('img/post/')}}{{ post.image }}"></td>
                <td>
                    <a href="{{ path('post_show', {'id': post.id}) }}">show</a>
                    <a href="{{ path('post_edit', {'id': post.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-light text-primary" href="{{ path('post_new') }}">Cr√©er Article</a>

    <h1>Ajax</h1>
    <button class="ajax">click me!</button>
    
    <table class="table table-bordered">
        <tbody id="post"></tbody>
    </table>

{% endblock %}
