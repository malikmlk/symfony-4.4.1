<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>

    {% for flash in app.session.flashBag.get('notice') %}
        <div id="notice" class="notice alert alert-notice alert-danger">
            {{flash}}
        </div>
    {% endfor %}

    {% for flash in app.session.flashBag.get('add') %}
        <div id="add" class="add alert alert-success">
            {{flash}}
        </div>
    {% endfor %}

    {% for flash in app.session.flashBag.get('com') %}
        <div id="com" class="alert alert-notice alert-danger">
            {{flash}}
        </div>
    {% endfor %}
    
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
        <script src="{{asset('js/Jquery3.4.1.js')}}"></script>
        <script src="{{asset('js/main.js')}}"></script>
    </body>
</html>
